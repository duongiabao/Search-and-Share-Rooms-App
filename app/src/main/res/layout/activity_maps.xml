
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolBar_map"
        android:background="#3F51B5"
        app:titleTextColor="#FFFFFF"
        app:title="Địa chỉ"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@drawable/background_lienhe"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="25dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#ffff"
            android:text="THÔNG TIN VỀ CHÚNG TÔI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_maps"

                android:layout_margin="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:text="Địa chỉ: 19 Đường Nguyễn Hữu Thọ, Tân Hưng, Quận 7, Hồ Chí Minh 758307, Việt Nam"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
